<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p = "http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="infoTableAdapter1" class="com.avectis.transportcontrol.control.infotable.InfoTableAdapterTCP">
        <property name="ipAddr" value="192.168.1.111"> </property>
        <property name="port" value="5000"> </property>
        <property name="InfoTableAddress" value="9999"> </property>
    </bean>
    <bean id="infoTable1" class="com.avectis.transportcontrol.control.infotable.InfoTable">
        <property name="name" value="infoTable1"> </property>
        <property name="infoTableAdapter" ref="infoTableAdapter1"> </property>
    </bean>
    <bean id="infoTableFacade" class="com.avectis.transportcontrol.facade.InfoTableFacade">
        <property name="infoTableCollection">
            <list>
                <ref bean="infoTable1"/>
            </list>
        </property>
    </bean>
</beans>