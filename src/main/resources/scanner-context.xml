<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p = "http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
        
        <bean id="cardScannerAdapter1" class="com.avectis.transportcontrol.control.scanner.CardScannerAdapterTest" init-method="init" destroy-method="destroy">
            <property name="portName" value="COM6"> </property>
        </bean>
        <bean id="cardScanner1" class="com.avectis.transportcontrol.control.scanner.CardScanner">
            <property name="name" value="scanner1"> </property>
            <property name="scannerAdapter" ref="cardScannerAdapter1"> </property>
        </bean>
        <bean id="scannerFacade" class="com.avectis.transportcontrol.facade.ScannerFacade">
            <property name="scannerCollection">
                <list>
                    <ref bean="cardScanner1"/>
                </list>
            </property>
        </bean>
</beans>