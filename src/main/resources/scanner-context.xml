<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p = "http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
        
        <bean id="cardAdapterScanner" class="com.avectis.transportcontrol.control.scanner.CardScannerAdapterCOM" init-method="init" destroy-method="destroy">
            <property name="portName" value="COM6"> </property>
        </bean>
        <bean id="CardScanner1" class="com.avectis.transportcontrol.control.scanner.CardScanner">
            <constructor-arg index="0" value="scanner1"/>
            <constructor-arg index="1" ref="cardAdapterScanner"/>
        </bean>
        <bean id="scannerFacade" class="com.avectis.transportcontrol.facade.ScannerFacade">
            <property name="scannerCollection">
                <list>
                    <ref bean="CardScanner1"/>
                </list>
            </property>
        </bean>
</beans>